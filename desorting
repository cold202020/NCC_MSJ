t = int(input())

for i in range(t):
  n = int(input())
  a = list(map(int,input().split()))
  c = sorted(a)
  if a != c:
    print(0)
  else:
    b = a[1] - a[0]
    for i in range(n-1):
      if b > a[i+1] - a[i]:
        b = a[i+1] - a[i]
    if b % 2 ==0:
      print(b//2+1)
    else:
      print((b+1)//2)